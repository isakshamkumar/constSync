{
  "manifest_version": 2,
  "name": "ProductAnalyzer",
  "version": "1.0",
  "description": "Analyze product prices across e-commerce websites",
  "permissions": [
    "storage",
    "webNavigation",
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_width": 400,
    "default_height": 600
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "productanalyzer@example.com"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.flipkart.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "index.html"
  }
}
